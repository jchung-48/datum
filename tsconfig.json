{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["./lib/*"]
    },
    "rootDir": ".",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "jest",
      "@testing-library/jest-dom"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*.tsx",
    "app/**/*.ts",
    "app/*.js",
    "app/api/*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    ".next/types/**/*.ts",
    "lib/*.ts",
    "lib/*.js",
    "jest.setup.ts"
  ]
}