{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "lib": ["DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "rootDir": ".",
    "outDir": "build",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["jest", "@testing-library/jest-dom"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app/**/*.tsx",
    "app/**/*.ts",
    "app/*.js",
    "src/**/*.ts",
    "test/**/*.ts",
    ".next/types/**/*.ts",
    "firebase.js",
    "jest.setup.ts"
  ]
}
